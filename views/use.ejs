<section id="use" class="section">
  <h2 data-translationKey="page.use.title"></h2>
  <div class="use_container">
    <p data-translationKey="page.use.run_code">
      Run this code here, in a console or from any site:
    </p>
    <div class="code_block">
      <pre>
fetch('<%= host%>/api/users?amount=3')
  .then(response => response.json())
  .then(json => console.log(json))</pre
      >
    </div>
    <div class="use_button">Run script</div>
    <div class="code_block">
      <pre id="fetch_result">{}</pre>
    </div>
  </div>
